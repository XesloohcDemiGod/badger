{% extends 'GameBundle::base-admin.html.twig' %}

{% block body %}
    <div class="page-header page-header-default no-margin-bottom">
        <div class="breadcrumb-line" style="border-bottom: 0; z-index: 5;"><a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
            <ul class="breadcrumb">
                <li><a href="{{ path('admin') }}"><i class="icon-home2 position-left"></i> Admin</a></li>
                <li><a href="{{ path('admin_badge_index') }}"><i class="icon-medal2"></i> Badges</a></li>
                <li class="active"><i class="icon-pencil7"></i> Edit badge "{{ badge.title }}"</li>
            </ul>
        </div>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="panel panel-flat m-15">
        <div class="panel-body">
            {{ form_widget(edit_form) }}

            <div class="row">
                <div class="col-lg-10 col-lg-offset-2">
                    <img class="img-responsive img-rounded media-preview" src="{{ badge.imageWebPath }}" alt=""/>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Edit <i class="icon-arrow-right14 position-right"></i></button>
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('vendor/dist/selectize.min.js') }}"></script>

    <script>
        $('#badge_tags').selectize({
            plugins: ['remove_button'],
        });
    </script>
{% endblock %}
