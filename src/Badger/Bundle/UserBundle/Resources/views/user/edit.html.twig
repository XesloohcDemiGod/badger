{% extends '@Game/base-admin.html.twig' %}

{% block body %}
    <div class="page-header page-header-default">
        <div class="breadcrumb-line" style="border-bottom: 0; z-index: 5;">
            <ul class="breadcrumb">
                <li><a href="{{ path('admin') }}"><i class="icon-home2 position-left"></i> Admin</a></li>
                <li><a href="{{ path('admin_user_index') }}"><i class="icon-users"></i> Users</a></li>
                <li class="active"><i class="icon-pencil7"></i> Edit user "{{ user.username }}"</li>
            </ul>
        </div>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="panel panel-flat m-15">
        <div class="panel-body">
            {{ form_widget(edit_form) }}

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Save <i class="icon-arrow-right14 position-right"></i></button>
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('vendor/dist/selectize.min.js') }}"></script>
    
    <script>
        $('#user_tags').selectize({
            plugins: ['remove_button'],
        });
    </script>
{% endblock %}
