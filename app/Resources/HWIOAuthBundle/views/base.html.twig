<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/icons/icomoon/styles.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/core.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/components.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/colors.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/game/css/extras/animate.min.css') }}" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->

    <!-- Core JS files -->
    <script type="text/javascript" src="{{ asset('bundles/game/js/core/libraries/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/core/libraries/bootstrap.min.js') }}"></script>
    <!-- /core JS files -->

    <!-- Theme JS files -->
    <script type="text/javascript" src="{{ asset('bundles/game/js/plugins/ui/nicescroll.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/core/app.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/pages/layout_fixed_custom.js') }}"></script>
    <!-- /theme JS files -->

</head>

<body class="login-container">

<!-- Page container -->
<div class="page-container" style="padding-top: 0px;">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">

            <div style="background: #ffffff; padding: 60px 0 190px 0; background-image: linear-gradient(-135deg, #FFE2C8, #89FFF4); margin-bottom: -110px; margin-top: -40px;">
            </div>

            <!-- Content area -->
            <div class="content">

                <!-- Advanced login -->
                <form action="index.html">
                    <div class="panel panel-body login-form">
                        <div class="text-center">
                            <img src="{{ asset('bundles/game/images/badger-only-128.png') }}" style="height: 70px;" alt="">
                            <h5 class="content-group">Welcome to Badger</h5>
                        </div>

                        <div class="content-divider text-muted form-group"><span>sign in with</span></div>
                        <div class="form-group">
                            {% if(google_client_activated) %}
                                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" class="btn btn-danger btn-block btn-labeled"><b><i class="icon-google"></i></b> Sign in with Google</a>
                            {% endif %}

                            {% if(github_client_activated) %}
                                <a href="{{ path('github_connect') }}" class="btn bg-slate-600 border-slate-600 btn-block btn-labeled"><b><i class="icon-github"></i></b> Sign in with GitHub</a>
                            {% endif %}
                        </div>
                    </div>
                </form>
                <!-- /advanced login -->


                <!-- Footer -->
                <div class="footer text-muted text-center">
                    <i class="icon-github"></i> <a href="https://github.com/the-badger/badger">Badger, open-source project</a> - v{{ app_version }}
                </div>
                <!-- /footer -->

            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

</body>
</html>
